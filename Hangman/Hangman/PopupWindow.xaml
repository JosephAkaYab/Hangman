<Window x:Class="Hangman.PopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hangman"
        mc:Ignorable="d"
        Title="PopupWindow" Height="450" Width="800">
    <Grid Background="#FFFCE4EC">
        <Button x:Name="btnLookUp" Content="Look up definiton" Margin="50,319,0,0" FontSize="24" Background="{x:Null}" BorderBrush="#FF0D47A1" Foreground="#FF0D47A1" FontFamily="Noto Sans" Click="BtnLookUp_Click" HorizontalAlignment="Left" Width="342" Height="50" VerticalAlignment="Top"/>
        <Button x:Name="btnNext" Content="Next round" Margin="400,319,0,0" VerticalAlignment="Top" Height="50" FontSize="24" Background="{x:Null}" BorderBrush="#FF0D47A1" Foreground="#FF0D47A1" FontFamily="Noto Sans" Click="BtnNext_Click" HorizontalAlignment="Left" Width="342"/>
        <TextBox x:Name="txtMessage" HorizontalAlignment="Left" Height="165" Margin="50,94,0,0" TextWrapping="Wrap" Text="Hard luck the answer was: " VerticalAlignment="Top" Width="692" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF0D47A1" FontSize="48" TextAlignment="Center" IsEnabled="False"/>

    </Grid>
</Window>
